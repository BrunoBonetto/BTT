<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />


        <variable
            name="heroesDetailViewModel"
            type="br.com.bruno.desafiobtt.viewmodel.ItemHeroesDetailViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/item_heroes_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/comics"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_filled_circle"
            android:fontFamily="@font/avengeance"
            android:gravity="center_vertical"
            android:text="@{heroesDetailViewModel.name}"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

</layout>

